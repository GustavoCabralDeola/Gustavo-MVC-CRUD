@model Gustavo_MVC_CRUD.Models.Usuario

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa" class="control-label"></label>
                <input asp-for="Empresa" class="form-control" />
                <span asp-validation-for="Empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonePessoal" class="control-label"></label>
                <input asp-for="TelefonePessoal" class="form-control" />
                <span asp-validation-for="TelefonePessoal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneComercial" class="control-label"></label>
                <input asp-for="TelefoneComercial" class="form-control" />
                <span asp-validation-for="TelefoneComercial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" style="margin-top: 1rem"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">
        <input type="submit" value="Voltar" class="btn btn-secundary" style=" margin-top: 1rem">
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
