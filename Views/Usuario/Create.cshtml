@model Gustavo_MVC_CRUD.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<h1>Criar</h1>

<h4>Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Empresa" class="control-label"></label>
                <input asp-for="Empresa" class="form-control" />
                <span asp-validation-for="Empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefonePessoal" class="control-label"></label>
                <input asp-for="TelefonePessoal" class="form-control" />
                <span asp-validation-for="TelefonePessoal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelefoneComercial" class="control-label"></label>
                <input asp-for="TelefoneComercial" class="form-control" />
                <span asp-validation-for="TelefoneComercial" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 1rem">
                <input type="submit" value="Criar" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
